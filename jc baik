  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f0f0;
      margin: 0;
      padding: 0;
    }

    header {
      background: #1565c0;
      color: white;
      text-align: center;
      padding: 20px;
    }

    .container {
      width: 90%;
      max-width: 800px;
      margin: 20px auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      margin: 5px 0;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    button {
      background: #1565c0;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 4px;
    }

    button:hover {
      background: #0d47a1;
    }

    article {
      border-bottom: 1px solid #ddd;
      margin-top: 20px;
      padding-bottom: 10px;
    }

    h2 {
      color: #1565c0;
    }

    img {
      width: 100%;
      border-radius: 6px;
      margin-top: 10px;
    }

    footer {
      background: #0d47a1;
      color: white;
      text-align: center;
      padding: 10px;
      margin-top: 40px;
    }

    .admin-form {
      display: none;
    }

    .login-form {
      text-align: center;
    }
